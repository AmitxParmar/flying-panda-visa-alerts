generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "mongodb"
    url      = env("DATABASE_URL")
}

// User Model
model User {
    id        String   @id @default(auto()) @map("_id") @db.ObjectId
    name      String?
    email     String   @unique
    password  String
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt

    @@map("users")
}

enum VisaType {
    Tourist
    Business
    Student
}

enum AlertStatus {
    Active
    Booked
    Expired
}

// Visa Alert Model
model VisaAlert {
    id        String      @id @default(uuid()) @map("_id")
    country   String
    city      String
    visaType  VisaType
    status    AlertStatus @default(Active)
    createdAt DateTime    @default(now())

    @@map("visa_alerts")
}
